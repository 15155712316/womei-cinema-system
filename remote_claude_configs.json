{
  "远程HTTP配置示例": {
    "mcpServers": {
      "context7-remote": {
        "command": "curl",
        "args": [
          "-X", "POST",
          "-H", "Content-Type: application/json",
          "-d", "@-",
          "http://your-mcp-server.com:3000"
        ],
        "env": {
          "PATH": "/usr/local/bin:/usr/bin:/bin"
        }
      }
    }
  },

  "远程HTTPS配置示例": {
    "mcpServers": {
      "context7-secure": {
        "command": "curl",
        "args": [
          "-X", "POST",
          "-H", "Content-Type: application/json",
          "-H", "Authorization: Bearer YOUR_API_TOKEN",
          "-d", "@-",
          "https://your-mcp-server.com"
        ],
        "env": {
          "PATH": "/usr/local/bin:/usr/bin:/bin"
        }
      }
    }
  },

  "SSE配置示例": {
    "mcpServers": {
      "context7-sse": {
        "command": "node",
        "args": [
          "-e",
          "const EventSource = require('eventsource'); const es = new EventSource('https://your-mcp-server.com/sse'); es.onmessage = (event) => { console.log(event.data); };"
        ],
        "env": {
          "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"
        }
      }
    }
  },

  "WebSocket配置示例": {
    "mcpServers": {
      "context7-ws": {
        "command": "node",
        "args": [
          "-e",
          "const WebSocket = require('ws'); const ws = new WebSocket('wss://your-mcp-server.com/ws'); ws.on('message', (data) => { console.log(data.toString()); });"
        ],
        "env": {
          "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"
        }
      }
    }
  },

  "负载均衡配置示例": {
    "mcpServers": {
      "context7-lb": {
        "command": "node",
        "args": [
          "-e",
          "const servers = ['https://mcp1.example.com', 'https://mcp2.example.com']; const server = servers[Math.floor(Math.random() * servers.length)]; require('child_process').spawn('curl', ['-X', 'POST', '-H', 'Content-Type: application/json', '-d', '@-', server], {stdio: 'inherit'});"
        ],
        "env": {
          "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin"
        }
      }
    }
  },

  "带认证的配置示例": {
    "mcpServers": {
      "context7-auth": {
        "command": "curl",
        "args": [
          "-X", "POST",
          "-H", "Content-Type: application/json",
          "-H", "Authorization: Bearer ${MCP_API_TOKEN}",
          "-H", "X-Client-ID: ${MCP_CLIENT_ID}",
          "--cert", "/path/to/client.crt",
          "--key", "/path/to/client.key",
          "-d", "@-",
          "https://secure-mcp.example.com"
        ],
        "env": {
          "PATH": "/usr/local/bin:/usr/bin:/bin",
          "MCP_API_TOKEN": "your-api-token-here",
          "MCP_CLIENT_ID": "your-client-id-here"
        }
      }
    }
  }
}
