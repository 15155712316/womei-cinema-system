{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin",
        "NODE_ENV": "production"
      },
      "timeout": 30,
      "autoApprove": ["search", "query", "context"]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin",
        "NODE_ENV": "production"
      },
      "timeout": 60,
      "autoApprove": ["navigate", "click", "type", "screenshot"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking@latest"
      ],
      "env": {
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin",
        "NODE_ENV": "production"
      },
      "timeout": 30,
      "autoApprove": ["think", "analyze", "plan"]
    },
    "user-feedback": {
      "command": "python3",
      "args": [
        "/Users/jiang/data/沃美0617/user-feedback-mcp/augment_mcp_config.py"
      ],
      "env": {
        "FEEDBACK_SERVICE_URL": "http://localhost:3000",
        "PATH": "/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin",
        "PYTHONPATH": "/Users/jiang/data/沃美0617/user-feedback-mcp/.venv/lib/python3.11/site-packages"
      },
      "timeout": 600,
      "autoApprove": ["user_feedback", "check_mcp_status", "start_user_feedback_service"]
    }
  }
}
